<%# NEW RESTAURANT %>

<h1>New Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category, collection: Restaurant::CATEGORIES%>
<%= f.submit %>
<% end %>

<%= link_to "back to restaurants", restaurants_path, class: "btn btn-primary mt-4" %>
