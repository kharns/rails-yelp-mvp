<h1><%= @restaurant.name %></h1>

<h4><%= @restaurant.category %></h4>
<h4><%= @restaurant.phone_number %></h4>
<h4><%= @restaurant.address %></h4>
<h4 class="text-decoration-underline">Reviews</h4>
<ul class="list-unstyled border">
  <% @restaurant.reviews.each do |review| %>
    <div class="d-flex">
      <li><%= review.content %></li>
      <li class="ms-2 text-danger fw-bold"><%= review.rating %> / 5</li>
    </div>
  <% end %>
</ul>

<%# NEW REVIEW %>
<h3 class="mt-5">New Review</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>
  <%= f.submit %>
  <% end %>


<%= link_to "Back to restaurants list", restaurants_path, class: "btn btn-primary mt-3" %>
